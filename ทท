<body>

<div class="container">

    <!-- ============== DISPLAY SLIP ============== -->
    <div class="display-container">
        <canvas id="canvas" width="732" height="1280"></canvas>
        <button onclick="downloadImage()">บันทึกเป็นรูปภาพ</button>
    </div>

    <!-- ============== FORM INPUT ============== -->
    <div class="form-container">
        <h1>สร้างสลิปโอนเงิน</h1>

        <label>เวลาแจ้งเตือน</label>
        <input type="time" id="alertTime" oninput="updateDisplay()">

        <button id="powerSavingMode" onclick="togglePowerSavingMode()">โหมดประหยัดพลังงาน</button>

        <label>เลขบัญชี</label>
        <input type="text" id="account" value="xxx-x-x5529-x" oninput="updateDisplay()">

        <label>ยอดเงินเข้า</label>
        <input type="text" id="amount" value="30,650.00" oninput="updateDisplay()">

        <label>เวลาเงินเข้า</label>
        <input type="datetime-local" id="datetime" oninput="updateDisplay()">
    </div>

</div>


<script>
    const canvas = document.getElementById("canvas");
    const ctx = canvas.getContext("2d");

    function updateDisplay() {
        ctx.fillStyle = "#ffffff";
        ctx.fillRect(0, 0, canvas.width, canvas.height);

        ctx.fillStyle = "#333";
        ctx.font = "40px Kanit";

        ctx.fillText("เงินเข้า BK", 40, 100);
        ctx.font = "30px Kanit";

        ctx.fillText("บัญชี: " + document.getElementById("account").value, 40, 200);
        ctx.fillText("ยอดเงิน: " + document.getElementById("amount").value + " บาท", 40, 270);
        ctx.fillText("เวลาแจ้งเตือน: " + document.getElementById("alertTime").value, 40, 340);
        ctx.fillText("เวลาเงินเข้า: " + document.getElementById("datetime").value, 40, 410);
    }

    updateDisplay();

    function downloadImage() {
        const link = document.createElement("a");
        link.download = "slip.png";
        link.href = canvas.toDataURL();
        link.click();
    }

    function togglePowerSavingMode() {
        alert("โหมดประหยัดพลังงานถูกเปิด/ปิด (ตัวอย่าง)");
    }
</script>

</body>
